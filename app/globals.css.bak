/* /app/globals.css */

/* CSS Reset */
*,
*::before,
*::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html,
body {
  margin: 0;
  padding: 0;
  font-family: system-ui, sans-serif;
  font-size: 1rem;
  line-height: 1.25;
  color: var(--color-text);
  background-color: var(--color-background);
}

input,
button,
textarea,
select {
  font: inherit;
}

a {
  text-decoration: none;
  color: inherit;
}

button {
  cursor: pointer;
  background: none;
  border: none;
  padding: 0;
}

ul,
ol {
  list-style: none;
}

/* Farbvariablen für Light und Dark Theme */

/* Grundfarben für beide Themes */
