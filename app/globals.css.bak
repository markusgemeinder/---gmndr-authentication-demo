/* Light Theme */
[data-theme='light'] {
  /* Grundfarben */
  --color-background: var(--color-grey-50);
  --color-text: var(--color-grey-1000);
  --color-title: var(--color-blue-700);

  /* Header */
  --color-header: var(--color-blue-700);
  --color-header-text: var(--color-blue-0);
  --color-modal-header: var(--color-blue-800);

  /* Formulare und Eingabefelder */
  --color-form-background: var(--color-grey-0);
  --color-input-background: var(--color-grey-50);
  --color-form-border: var(--color-grey-200);

  /* Modale Fenster */
  --color-modal-background: var(--color-grey-);

  /* Zusatz-Elemente */
  --color-review-card-background: var(--color-form-background);
  --color-burger-menu-background: rgba(0, 24, 102, 0.9);
  --color-accordion-background: var(--color-red-700);
  --color-accordion-background-light: var(--color-blue-600);
  --color-border: var(--color-grey-200);
  --color-border-light: var(--color-grey-100);

  /* Textfarben */
  --color-text-medium: var(--color-grey-500);
  --color-text-light: var(--color-grey-400);

  /* Links */
  --color-link: var(--color-blue-200);
  --color-link-hover: var(--color-blue-400);

  /* Buttons */
  --color-button-primary: var(--color-blue-800);
  --color-button-primary-hover: var(--color-blue-600);
  --color-button-secondary: var(--color-grey-800);
  --color-button-secondary-hover: var(--color-grey-600);
  --color-button-text: var(--color-grey-0);
  --color-button-review: var(--color-green-1000);
  --color-button-review-hover: var(--color-green-800);
  --color-button-demo-review: var(--color-orange-1000);
  --color-button-demo-review-hover: var(--color-orange-800);
  --color-button-warning: var(--color-red-1000);
  --color-button-warning-hover: var(--color-red-800);
  --color-button-edit: var(--color-blue-800);
  --color-button-edit-hover: var(--color-blue-600);
  --color-button-delete: var(--color-red-500);
  --color-button-delete-hover: var(--color-red-700);
  --color-button-page-navigation: var(--color-blue-600);
  --color-button-page-navigation-hover: var(--color-blue-400);
  --color-button-page-navigation-icon: var(--color-blue-600);

  /* Warnungen & Bestätigungen */
  --color-check-warning: var(--color-red-400);
  --color-check-ok: var(--color-green-600);

  /* Sterne-Bewertung */
  --star-color: var(--color-orange-300);
  --star-focus-color: var(--color-orange-400);
  --star-empty-color: var(--color-grey-200);

  --color-modal: rgba(0, 0, 0, 0.2);
  --color-modal-text: var(--color-grey-0);
  --color-button-login: var(--color-blue-500);
  --color-button-logout: var(--color-red-500);
  --color-button-register: var(--color-blue-400);
  --color-button-register-hover: var(--color-blue-600);
  --color-button-forgot-password: var(--color-orange-500);
  --color-button-forgot-password-hover: var(--color-orange-400);
}

/* Dark Theme */
[data-theme='dark'] {
  /* Grundfarben */
  --color-background: var(--color-grey-900);
  --color-text: var(--color-grey-50);
  --color-title: var(--color-blue-200);

  /* Header */
  --color-header: var(--color-blue-800);
  --color-header-text: var(--color-grey-0);
  --color-modal-header: var(--color-blue-400);

  /* Formulare und Eingabefelder */
  --color-form-background: var(--color-grey-900);
  --color-input-background: var(--color-grey-700);
  --color-form-border: var(--color-grey-600);

  /* Modale Fenster */
  --color-modal-background: var(--color-grey-900);

  /* Zusatz-Elemente */
  --color-review-card-background: var(--color-form-background);
  --color-burger-menu-background: var(--color-blue-700);
  --color-accordion-background: var(--color-blue-500);
  --color-accordion-background-light: var(--color-blue-600);
  --color-border: var(--color-grey-600);
  --color-border-light: var(--color-grey-700);

  /* Textfarben */
  --color-text-medium: var(--color-grey-300);
  --color-text-light: var(--color-grey-400);

  /* Links */
  --color-link: var(--color-blue-300);
  --color-link-hover: var(--color-blue-500);

  /* Buttons */
  --color-button-primary: var(--color-blue-200);
  --color-button-primary-hover: var(--color-blue-400);
  --color-button-secondary: var(--color-grey-700);
  --color-button-secondary-hover: var(--color-grey-600);
  --color-button-text: var(--color-grey-900);
  --color-button-review: var(--color-green-1000);
  --color-button-review-hover: var(--color-green-800);
  --color-button-demo-review: var(--color-orange-1000);
  --color-button-demo-review-hover: var(--color-orange-800);
  --color-button-warning: var(--color-red-1000);
  --color-button-warning-hover: var(--color-red-800);
  --color-button-edit: var(--color-blue-400);
  --color-button-edit-hover: var(--color-blue-600);
  --color-button-delete: var(--color-red-500);
  --color-button-delete-hover: var(--color-red-700);
  --color-button-page-navigation: var(--color-blue-500);
  --color-button-page-navigation-hover: var(--color-blue-700);
  --color-button-page-navigation-icon: var(--color-blue-600);

  /* Warnungen & Bestätigungen */
  --color-check-warning: var(--color-red-600);
  --color-check-ok: var(--color-green-500);

  /* Sterne-Bewertung */
  --star-color: var(--color-orange-600);
  --star-focus-color: var(--color-orange-700);
  --star-empty-color: var(--color-grey-500);

  --color-modal: rgba(0, 0, 0, 0.7);
  --color-modal-text: var(--color-grey-50);
  --color-button-login: var(--color-blue-400);
  --color-button-logout: var(--color-red-400);
  --color-button-register: var(--color-blue-500);
  --color-button-register-hover: var(--color-blue-700);
  --color-button-forgot-password: var(--color-orange-400);
  --color-button-forgot-password-hover: var(--color-orange-500);
}

body {
  margin: 0;
  font-family: system-ui, sans-serif;
  font-size: 1rem;
  line-height: 1.25;
  text-align: center;
  margin: 0.5rem;
  color: var(--color-text);
  background-color: var(--color-background);
}

@keyframes blink {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
  100% {
    opacity: 1;
  }
}

.blinking-text {
  animation: blink 1s infinite;
}
