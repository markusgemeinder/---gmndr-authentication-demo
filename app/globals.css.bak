  --color-orange-1000: #000000;

  /* Farbvariablen für Tertiärfarben */
  --color-grey-0: #ffffff;
  --color-grey-50: #f2f2f3;
  --color-grey-100: #e5e5e6;
  --color-grey-200: #cbcbcd;
